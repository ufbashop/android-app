<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="br.ufba.ufbashop">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/app_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/app_icon_round"
            android:supportsRtl="true"
            android:theme="@style/Light"
            tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="br.ufba.ufbashop.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="br.ufba.ufbashop.activities.CreateShopActivity"
                  android:label="Criar Loja">
        </activity>
        <activity android:name="br.ufba.ufbashop.activities.EditShopsActivity"
                  android:label="Administrar Lojas">
        </activity>
        <activity android:name="br.ufba.ufbashop.activities.EditProfileActivity"
                  android:label="Editar Perfil">
        </activity>
        <activity android:name="br.ufba.ufbashop.activities.SingleShopActivity"
                  android:label="Loja">
        </activity>
        <activity android:name="br.ufba.ufbashop.activities.ShopProductsActivity"
                  android:label="Loja">
        </activity>

        <activity android:name="br.ufba.ufbashop.activities.CreateProductActivity"
                  android:label="Adicionar Produtos">
        </activity>
    </application>

</manifest>