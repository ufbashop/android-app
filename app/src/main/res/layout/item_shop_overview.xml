<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle">

        <ImageView
                android:layout_width="128dp"
                android:layout_height="96dp"
                tools:srcCompat="@tools:sample/avatars[2]"
                android:id="@+id/shop_logo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                />

        <View
                style="@style/Divider"
                app:layout_constraintTop_toBottomOf="@+id/item_shop_name"
                app:layout_constraintStart_toEndOf="@+id/shop_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                tools:text="APRECIADORES DE CACHORROS LTDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_name"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shop_logo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/shop_logo"
                style="@style/TextViewStyle"/>

        <TextView
                tools:text="CAMPUS :ONDINA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_campus"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                style="@style/TextViewStyle"
                app:layout_constraintTop_toBottomOf="@+id/item_shop_location_icon"
                android:layout_marginTop="8dp"/>

        <TextView
                tools:text="ABRE: 13:00"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView11"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/item_shop_name"
                app:layout_constraintTop_toBottomOf="@+id/item_shop_location_icon"
                android:layout_marginTop="8dp"/>

        <TextView
                tools:text="ABRE: 13:00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_opens"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                style="@style/TextViewStyle"/>

        <TextView
                tools:text="FECHA: 18:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_closes"
                android:textSize="12sp"
                style="@style/TextViewStyle"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_shop_opens"
                android:layout_marginTop="8dp"/>

        <TextView
                tools:text="ENTRADA DO PAF 1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_location_icon"
                android:textSize="10sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                style="@style/TextViewStyle"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_shop_description"
                android:textSize="12sp"
                tools:text="Somos uma empresa que aprecia cochorros.bdasbjbasdjfbajfbajfbajfbasjkfbasfjbasjfbasjfbasjfba aasjsdaif asd jasidjasi djasi djiasjd isajdiasj idasj idajsi djasid jasid jasid jasi djaisdj iasjd iasj diasjd iasjd iasjd iasjd iasjd iajsidjasid ja"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                style="@style/TextViewStyle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_shop_closes"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_access_time_black_24dp"
                android:id="@+id/imageView"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/shop_logo"
                app:layout_constraintStart_toStartOf="@+id/shop_logo"
                android:layout_marginStart="8dp"/>

        <TextView
                style="@style/TextViewStyle"
                android:text="Localização"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/shop_logo"
                android:layout_marginStart="8dp"
                tools:layout_editor_absoluteY="80dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>